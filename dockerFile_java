# Usa a imagem base Ubuntu mais recente
FROM ubuntu:latest

# Atualiza os pacotes e instala o OpenJDK 21 e Git
RUN apt-get update && \
    apt-get install -y openjdk-21-jdk git && \
    rm -rf /var/lib/apt/lists/*

# Define o diretório de trabalho dentro do container
WORKDIR /usr/src/app

# Clona o repositório do seu projeto
RUN git clone https://github.com/NexusEnergyy/PrototipoJAR.git .

# Muda o diretório para a pasta PrototipoJar
WORKDIR /usr/src/app/PrototipoJar

# Executa o Arquivo Jar
CMD ["java", "-jar", "PrototipoJar.jar"]
